# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# =============================================================================

# Режим запуска (development, production, testing)
ENVIRONMENT=development

# Название проекта
PROJECT_NAME=CommunaApp

# Версия API
API_VERSION=v1

# URL для API документации (Swagger)
DOCS_URL=/docs

# Хост и порт для запуска сервера
HOST=0.0.0.0
PORT=8000

# =============================================================================
# БАЗА ДАННЫХ POSTGRESQL
# =============================================================================

# Хост базы данных
DB_HOST=localhost

# Порт базы данных  
DB_PORT=5432

# Имя базы данных
DB_NAME=communaapp

# Пользователь базы данных
DB_USER=postgres

# Пароль базы данных
DB_PASSWORD=your_password_here

# Максимальное количество подключений к БД
DB_POOL_SIZE=20

# Максимальное количество дополнительных подключений
DB_MAX_OVERFLOW=30

# Таймаут подключения к БД (секунды)
DB_CONNECT_TIMEOUT=30

# =============================================================================
# REDIS (для кэширования и сессий)
# =============================================================================

# URL подключения к Redis
REDIS_URL=redis://localhost:6379/0

# Время жизни кэша по умолчанию (секунды)
CACHE_TTL=3600

# =============================================================================
# БЕЗОПАСНОСТЬ И АВТОРИЗАЦИЯ
# =============================================================================

# Секретный ключ для подписи JWT токенов (ОБЯЗАТЕЛЬНО ПОМЕНЯТЬ!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Алгоритм шифрования для JWT
JWT_ALGORITHM=HS256

# Время жизни JWT токена (минуты)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Ключ для шифрования конфиденциальных данных (токены ботов и т.д.)
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# =============================================================================
# TELEGRAM НАСТРОЙКИ
# =============================================================================

# Webhook URL для Telegram ботов (ваш домен)
TELEGRAM_WEBHOOK_DOMAIN=https://yourdomain.com

# Секрет для webhook (для безопасности)
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-change-this

# =============================================================================
# ФАЙЛОВОЕ ХРАНИЛИЩЕ
# =============================================================================

# Путь для загрузки файлов
UPLOAD_PATH=./uploads

# Максимальный размер файла (байты) - 50MB
MAX_FILE_SIZE=52428800

# Разрешенные типы файлов
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,mp4,mp3,docx,xlsx

# =============================================================================
# ЛОГИРОВАНИЕ
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Формат логов (json, text)
LOG_FORMAT=json

# Файл для записи логов
LOG_FILE=logs/app.log

# =============================================================================
# EMAIL (для уведомлений)
# =============================================================================

# SMTP сервер
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email "от кого" для системных уведомлений
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# ВНЕШНИЕ СЕРВИСЫ
# =============================================================================

# API ключ для внешних сервисов (если нужно)
EXTERNAL_API_KEY=your-external-api-key

# URL внешних сервисов
EXTERNAL_SERVICE_URL=https://api.external-service.com

# =============================================================================
# МОНИТОРИНГ И МЕТРИКИ
# =============================================================================

# Включить сбор метрик
ENABLE_METRICS=true

# Порт для метрик Prometheus
METRICS_PORT=9090

# =============================================================================
# РАЗРАБОТКА И ДЕБАГ
# =============================================================================

# Включить отладочный режим
DEBUG=true

# Включить автоперезагрузку при изменении кода
RELOAD=true

# Показывать трейсбеки в API ответах
SHOW_TRACEBACK=true