# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРОЕКТА KOMMUNA
# =============================================================================

# Общие настройки
PROJECT_NAME=Kommuna
ENVIRONMENT=development  # или production

# =============================================================================
# БАЗА ДАННЫХ POSTGRESQL
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kommuna
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# =============================================================================
# BACKEND API НАСТРОЙКИ
# =============================================================================
# JWT секретный ключ (поставь длинную случайную строку, 32–64+ символа)
JWT_SECRET_KEY=CHANGE_ME_LONG_RANDOM_SECRET_64

# Ключ для шифрования токенов ботов (ровно 32 символа)
ENCRYPTION_KEY=CHANGE_ME_32_CHARS_ENCRYPTION_KEY_012345

# Публичный URL бэкенда (для фронтенда). Должен быть HTTPS.
NEXT_PUBLIC_API_URL=https://your-backend.example.com

# =============================================================================
# TELEGRAM BOT НАСТРОЙКИ
# =============================================================================
# Токен Telegram-бота от @BotFather
TELEGRAM_BOT_TOKEN=1234567890:AAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Домен/URL для webhook (можно указать домен без схемы либо полный https-URL)
# Примеры:
# TELEGRAM_WEBHOOK_DOMAIN=your-backend.example.com
# или
# TELEGRAM_WEBHOOK_DOMAIN=https://your-backend.example.com
TELEGRAM_WEBHOOK_DOMAIN=your-backend.example.com

# Секрет для заголовка X-Telegram-Bot-Api-Secret-Token (64 hex рекомендуем)
WEBHOOK_SECRET=ffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff

# Публичный HTTPS-URL мини-приложения (фронтенд)
TELEGRAM_WEBAPP_URL=https://your-frontend.example.com

# =============================================================================
# ЛОГИРОВАНИЕ
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# РАЗРАБОТКА
# =============================================================================
DEBUG=false
